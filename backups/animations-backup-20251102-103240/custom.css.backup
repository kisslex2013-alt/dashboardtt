/* Custom styles for Time Tracker Dashboard */

/* Base styles */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html {
  font-family: 'Inter', sans-serif;
}

body {
  background-color: #f3f4f6;
  color: #111827;
  transition: background-color 0.3s ease, color 0.3s ease;
}

.dark body {
  background-color: #111827;
  color: #f9fafb;
}

/* Glass effects */
.glass-effect {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(16px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  border-radius: 12px;
  transition: backdrop-filter 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease;
}

.dark .glass-effect {
  background: rgba(31, 41, 55, 0.8);
  border: 1px solid rgba(75, 85, 99, 0.2);
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
}

/* Убираем backdrop-filter при hover только для элементов, не являющихся overlay */
.glass-effect:not([aria-hidden="true"]):hover {
  backdrop-filter: blur(16px);
}

/* Card preset using glass-effect visuals */
.glass-card {
  background: rgba(255, 255, 255, 0.08);
  backdrop-filter: blur(16px);
  border: 1px solid rgba(255, 255, 255, 0.12);
  border-radius: 12px;
  padding: 16px; /* fallback if no Tailwind padding present */
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.dark .glass-card {
  background: rgba(17, 24, 39, 0.7);
  backdrop-filter: blur(24px) saturate(200%);
  border: 1px solid rgba(255, 255, 255, 0.1);
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4), inset 0 1px 0 rgba(255, 255, 255, 0.05);
}

/* Dark Glass hover effects */
.dark .glass-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 12px 40px rgba(0, 0, 0, 0.5), inset 0 1px 0 rgba(255, 255, 255, 0.1);
  border-color: rgba(255, 255, 255, 0.2);
  background: rgba(17, 24, 39, 0.8);
}

/* Glow effects для разных цветов */
.glow-blue {
  box-shadow: 0 0 20px rgba(59, 130, 246, 0.3);
}

.glow-blue:hover {
  box-shadow: 0 0 25px rgba(59, 130, 246, 0.4), 0 8px 24px rgba(0, 0, 0, 0.15);
}

.dark .glow-blue:hover {
  box-shadow: 0 0 30px rgba(59, 130, 246, 0.5), 0 12px 40px rgba(0, 0, 0, 0.5);
}

.glow-teal {
  box-shadow: 0 0 20px rgba(20, 184, 166, 0.3);
}

.glow-teal:hover {
  box-shadow: 0 0 25px rgba(20, 184, 166, 0.4), 0 8px 24px rgba(0, 0, 0, 0.15);
}

.dark .glow-teal:hover {
  box-shadow: 0 0 30px rgba(20, 184, 166, 0.5), 0 12px 40px rgba(0, 0, 0, 0.5);
}

.glow-green {
  box-shadow: 0 0 20px rgba(16, 185, 129, 0.3);
}

.glow-green:hover {
  box-shadow: 0 0 25px rgba(16, 185, 129, 0.4), 0 8px 24px rgba(0, 0, 0, 0.15);
}

.dark .glow-green:hover {
  box-shadow: 0 0 30px rgba(16, 185, 129, 0.5), 0 12px 40px rgba(0, 0, 0, 0.5);
}

.glow-purple {
  box-shadow: 0 0 20px rgba(139, 92, 246, 0.3);
}

.glow-purple:hover {
  box-shadow: 0 0 25px rgba(139, 92, 246, 0.4), 0 8px 24px rgba(0, 0, 0, 0.15);
}

.dark .glow-purple:hover {
  box-shadow: 0 0 30px rgba(139, 92, 246, 0.5), 0 12px 40px rgba(0, 0, 0, 0.5);
}

.glow-orange {
  box-shadow: 0 0 20px rgba(249, 115, 22, 0.3);
}

.glow-orange:hover {
  box-shadow: 0 0 25px rgba(249, 115, 22, 0.4), 0 8px 24px rgba(0, 0, 0, 0.15);
}

.dark .glow-orange:hover {
  box-shadow: 0 0 30px rgba(249, 115, 22, 0.5), 0 12px 40px rgba(0, 0, 0, 0.5);
}

.glow-yellow {
  box-shadow: 0 0 20px rgba(251, 191, 36, 0.3);
}

.glow-yellow:hover {
  box-shadow: 0 0 25px rgba(251, 191, 36, 0.4), 0 8px 24px rgba(0, 0, 0, 0.15);
}

.dark .glow-yellow:hover {
  box-shadow: 0 0 30px rgba(251, 191, 36, 0.5), 0 12px 40px rgba(0, 0, 0, 0.5);
}

.glow-red {
  box-shadow: 0 0 20px rgba(239, 68, 68, 0.3);
}

.glow-red:hover {
  box-shadow: 0 0 25px rgba(239, 68, 68, 0.4), 0 8px 24px rgba(0, 0, 0, 0.15);
}

.dark .glow-red:hover {
  box-shadow: 0 0 30px rgba(239, 68, 68, 0.5), 0 12px 40px rgba(0, 0, 0, 0.5);
}

.glass-button {
  /* Do not set background-color here to avoid overriding Tailwind bg-* variants */
  backdrop-filter: blur(16px);
  border: 1px solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  border-radius: 8px;
}

.dark .glass-button {
  /* Keep transparent background; only adjust border and shadow for dark theme */
  border: 1px solid rgba(75, 85, 99, 0.3);
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
}

.glass-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
}

.dark .glass-button:hover {
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
}

/* Animations */
@keyframes slideIn {
  from {
    transform: translateX(100%);
    opacity: 0;
  }
  to {
    transform: translateX(0);
    opacity: 1;
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideInProgress {
  from {
    width: 0;
  }
}

@keyframes pulseGlow {
  0%, 100% {
    box-shadow: 0 0 5px rgba(59, 130, 246, 0.5);
  }
  50% {
    box-shadow: 0 0 20px rgba(59, 130, 246, 0.8);
  }
}

.animate-slide-in {
  animation: slideIn 0.3s ease-out;
}

.animate-fade-in {
  animation: fadeIn 0.3s ease-out;
}

.animate-pulse-glow {
  animation: pulseGlow 2s infinite;
}

