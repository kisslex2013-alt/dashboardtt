/* Accordion (details/summary) styles */
details > summary {
  cursor: pointer;
  list-style: none;
}

details > summary::-webkit-details-marker {
  display: none;
}

details > summary::-moz-list-bullet {
  list-style-type: none;
}

details[open] > summary .details-icon,
details[open] > summary .chevron-icon {
  transform: rotate(180deg);
}

/* Timeline styles */
.timeline {
  position: relative;
  max-width: 1200px;
  margin: 0 auto;
  padding-top: 1rem;
}

.timeline::before {
  content: '';
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 2px; /* делаем линию заметнее */
  height: 100%;
  background: linear-gradient(to bottom, transparent, #4c1d95, transparent);
  pointer-events: none;
  z-index: 1; /* линия поверх фона, но под точками и карточками */
}

.dark .timeline::before {
  background: linear-gradient(to bottom, transparent, #60a5fa, transparent);
  z-index: 1;
}

.timeline-dot {
  position: absolute;
  top: 28px;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 1.25rem;
  height: 1.25rem;
  border-radius: 9999px;
  background-color: #3b82f6;
  box-shadow: 0 0 12px 2px rgba(59, 130, 246, 0.5);
  z-index: 1;
  border: 2px solid white;
}

.dark .timeline-dot {
  background: #60a5fa;
  border-color: #1f2937;
  box-shadow: 0 0 12px 2px rgba(96, 165, 250, 0.5);
}

    /* Новая раскладка таймлайна на CSS Grid: центр = колонка с точкой */
    .timeline-item {
      display: grid;
      grid-template-columns: 1fr 40px 1fr; /* левая карточка | точка | правая карточка */
      align-items: center; /* центрируем всю строку, чтобы инсайты были посередине относительно main */
      gap: 1rem;
      position: relative;
    }

/* Точка теперь позиционируется через grid, а не абсолютом */
.timeline-item .timeline-dot {
  position: static;
  left: auto;
  top: auto;
  transform: none;
  grid-column: 2;
  grid-row: 1;
  justify-self: center;
  align-self: center; /* точка всегда по центру строки */
  z-index: 2; /* точка поверх вертикальной линии */
}

/* Блоки занимают противоположные стороны в шахматном порядке */
/* В нечетных строках: main слева (col 1), side справа (col 3) */
.timeline-item:nth-child(odd) .timeline-main {
  grid-column: 1;
  grid-row: 1;
  align-self: center; /* основной блок по центру строки */
}
.timeline-item:nth-child(odd) .timeline-side {
  grid-column: 3;
  grid-row: 1;
  align-self: center; /* инсайты по центру строки */
}

/* В четных строках: main справа (col 3), side слева (col 1) */
.timeline-item:nth-child(even) .timeline-main {
  grid-column: 3;
  grid-row: 1;
  align-self: center; /* основной блок по центру строки */
}
.timeline-item:nth-child(even) .timeline-side {
  grid-column: 1;
  grid-row: 1;
  align-self: center; /* инсайты по центру строки */
}

/* Ширина карточек внутри колонок */
.timeline-main, .timeline-side {
  width: 100%;
  max-width: 100%;
}

.timeline-main > .timeline-main-card,
.timeline-side > .timeline-side-card {
  width: 100%;
}

/* Hover эффекты */
.timeline-main-card {
  transition: box-shadow 0.3s ease-in-out;
}

.timeline-main-card:hover {
  box-shadow: 0 0 20px 2px rgba(59, 130, 246, 0.3);
}

/* Custom scrollbar styles */
.overflow-y-auto::-webkit-scrollbar {
  width: 8px;
}

.overflow-y-auto::-webkit-scrollbar-track {
  background: rgba(0, 0, 0, 0.05);
  border-radius: 4px;
}

.dark .overflow-y-auto::-webkit-scrollbar-track {
  background: rgba(255, 255, 255, 0.05);
}

.overflow-y-auto::-webkit-scrollbar-thumb {
  background: rgba(59, 130, 246, 0.5);
  border-radius: 4px;
  transition: background 0.3s;
}

.overflow-y-auto::-webkit-scrollbar-thumb:hover {
  background: rgba(59, 130, 246, 0.8);
}

.dark .overflow-y-auto::-webkit-scrollbar-thumb {
  background: rgba(59, 130, 246, 0.6);
}

.dark .overflow-y-auto::-webkit-scrollbar-thumb:hover {
  background: rgba(59, 130, 246, 0.9);
}

/* Debug utilities */
.debug-border {
  border: 2px solid red !important;
}

.debug-bg {
  background-color: yellow !important;
}

/* Анимации для кнопок массовых операций */
@keyframes categoryMorph {
  0% {
    transform: scale(1) rotate(0deg);
  }
  25% {
    transform: scale(1.05) rotate(-2deg) skewX(2deg);
  }
  50% {
    transform: scale(1.1) rotate(2deg) skewX(-2deg);
  }
  75% {
    transform: scale(1.05) rotate(-1deg) skewX(1deg);
  }
  100% {
    transform: scale(1) rotate(0deg);
  }
}

.button-bulk-category {
  transition: all 0.2s ease;
}

.button-bulk-category:hover {
  animation: categoryMorph 0.6s ease;
  transform: translateY(-3px) scale(1.05);
  box-shadow: 0 6px 16px rgba(34, 197, 94, 0.4);
}

.button-bulk-category:active {
  animation: categoryMorph 0.6s ease;
}

@keyframes exportUpward {
  0% {
    transform: translateY(0) scale(1);
  }
  50% {
    transform: translateY(-8px) scale(1.1);
  }
  100% {
    transform: translateY(-4px) scale(1.05);
  }
}

.button-bulk-export {
  transition: all 0.2s ease;
}

.button-bulk-export:hover {
  animation: exportUpward 0.5s ease;
  transform: translateY(-4px) scale(1.08);
  box-shadow: 0 8px 20px rgba(147, 51, 234, 0.4);
}

.button-bulk-export:active {
  animation: exportUpward 0.5s ease;
}

@keyframes deleteWarning {
  0% {
    transform: scale(1);
  }
  20% {
    transform: scale(1.3);
  }
  40% {
    transform: scale(0.9);
  }
  60% {
    transform: scale(1.2);
  }
  80% {
    transform: scale(0.95);
  }
  100% {
    transform: scale(1);
  }
}

.button-bulk-delete {
  transition: all 0.2s ease;
}

.button-bulk-delete:hover {
  animation: deleteWarning 0.4s ease;
  transform: translateY(-2px) scale(1.05);
  box-shadow: 0 6px 16px rgba(239, 68, 68, 0.4);
}

.button-bulk-delete:active {
  animation: deleteWarning 0.4s ease;
}

