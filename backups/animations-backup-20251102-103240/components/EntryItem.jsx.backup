import { memo } from 'react';
import PropTypes from 'prop-types';
import { Edit2, Trash2, Clock } from 'lucide-react';
import { useEntriesStore } from '../../store/useEntriesStore';
import { useSettingsStore } from '../../store/useSettingsStore';
import { formatDuration, formatEarned, formatRateWithUnit } from '../../utils/formatting';
import { calculateDuration } from '../../utils/calculations';
import { useConfirmModal } from '../../hooks/useConfirmModal';
import { ConfirmModal } from '../modals/ConfirmModal';

/**
 * üìù –ö–∞—Ä—Ç–æ—á–∫–∞ –æ—Ç–¥–µ–ª—å–Ω–æ–π –∑–∞–ø–∏—Å–∏ –≤—Ä–µ–º–µ–Ω–∏
 * - –ü–æ–∫–∞–∑—ã–≤–∞–µ—Ç –∫–∞—Ç–µ–≥–æ—Ä–∏—é, –≤—Ä–µ–º—è –Ω–∞—á–∞–ª–∞/–æ–∫–æ–Ω—á–∞–Ω–∏—è, –¥–ª–∏—Ç–µ–ª—å–Ω–æ—Å—Ç—å
 * - –û–ø–∏—Å–∞–Ω–∏–µ —Ä–∞–±–æ—Ç—ã
 * - –°—Ç–∞–≤–∫—É –∏ –∑–∞—Ä–∞–±–æ—Ç–æ–∫
 * - –ö–Ω–æ–ø–∫–∏ —Ä–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞–Ω–∏—è –∏ —É–¥–∞–ª–µ–Ω–∏—è
 * 
 * –û–ø—Ç–∏–º–∏–∑–∏—Ä–æ–≤–∞–Ω —Å React.memo –¥–ª—è –ø—Ä–µ–¥–æ—Ç–≤—Ä–∞—â–µ–Ω–∏—è –ª–∏—à–Ω–∏—Ö —Ä–µ-—Ä–µ–Ω–¥–µ—Ä–æ–≤
 */
export const EntryItem = memo(function EntryItem({ entry, onEdit }) {
  // –û–ø—Ç–∏–º–∏–∑–∏—Ä–æ–≤–∞–Ω–Ω—ã–µ —Å–µ–ª–µ–∫—Ç–æ—Ä—ã Zustand - —Ç–æ–ª—å–∫–æ –Ω—É–∂–Ω—ã–µ –¥–∞–Ω–Ω—ã–µ
  const deleteEntry = useEntriesStore(state => state.deleteEntry);
  const categories = useSettingsStore(state => state.categories);
  const { confirmConfig, openConfirm } = useConfirmModal();
  
  // –ü–æ–ª—É—á–∞–µ–º –Ω–∞–∑–≤–∞–Ω–∏–µ –∫–∞—Ç–µ–≥–æ—Ä–∏–∏ (–ø–æ–¥–¥–µ—Ä–∂–∫–∞ –∫–∞–∫ category, —Ç–∞–∫ –∏ categoryId)
  const getCategoryName = (entry) => {
    // –ï—Å–ª–∏ category - —Å—Ç—Ä–æ–∫–∞ (–Ω–∞–∑–≤–∞–Ω–∏–µ), –≤–æ–∑–≤—Ä–∞—â–∞–µ–º –∫–∞–∫ –µ—Å—Ç—å
    if (entry.category && typeof entry.category === 'string') {
      return entry.category;
    }
    
    // –ï—Å–ª–∏ –µ—Å—Ç—å categoryId, –∏—â–µ–º –ø–æ –Ω–µ–º—É
    if (entry.categoryId) {
      const category = categories.find(c => c.id === entry.categoryId);
      return category ? category.name : 'remix'; // –î–µ—Ñ–æ–ª—Ç –¥–ª—è undefined
    }
    
    // –ï—Å–ª–∏ –Ω–∏—á–µ–≥–æ –Ω–µ—Ç - –¥–µ—Ñ–æ–ª—Ç "remix" (–¥–ª—è —Å—Ç–∞—Ä—ã—Ö –∑–∞–ø–∏—Å–µ–π)
    return 'remix';
  };
  
  const categoryName = getCategoryName(entry);
  
  // –í—ã—á–∏—Å–ª—è–µ–º –¥–ª–∏—Ç–µ–ª—å–Ω–æ—Å—Ç—å, –µ—Å–ª–∏ –µ—ë –Ω–µ—Ç (–∏—Å–ø–æ–ª—å–∑—É–µ–º –æ–±—â—É—é —É—Ç–∏–ª–∏—Ç—É)
  const getDuration = () => {
    if (entry.duration) return formatDuration(entry.duration);
    
    if (entry.start && entry.end) {
      return formatDuration(calculateDuration(entry.start, entry.end));
    }
    
    return '0.00';
  };
  
  const handleDelete = () => {
    openConfirm({
      title: '–£–¥–∞–ª–∏—Ç—å –∑–∞–ø–∏—Å—å?',
      message: '–í—ã —É–≤–µ—Ä–µ–Ω—ã, —á—Ç–æ —Ö–æ—Ç–∏—Ç–µ —É–¥–∞–ª–∏—Ç—å —ç—Ç—É –∑–∞–ø–∏—Å—å? –≠—Ç–æ –¥–µ–π—Å—Ç–≤–∏–µ –Ω–µ–ª—å–∑—è –æ—Ç–º–µ–Ω–∏—Ç—å.',
      onConfirm: () => deleteEntry(entry.id),
      confirmText: '–£–¥–∞–ª–∏—Ç—å',
      cancelText: '–û—Ç–º–µ–Ω–∞'
    });
  };
  
  return (
    <div className="glass-effect rounded-lg p-4 hover:scale-102 transition-transform duration-200 border border-transparent hover:border-blue-500">
      <div className="flex items-start justify-between">
        <div className="flex-1">
          <div className="flex items-center gap-3 mb-2">
            {/* –ö–∞—Ç–µ–≥–æ—Ä–∏—è —Å –∏–∫–æ–Ω–∫–æ–π */}
            <span className="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200">
              {categoryName}
            </span>
            
            {/* –í—Ä–µ–º—è */}
            <span className="text-sm text-gray-500 dark:text-gray-400">
              {entry.start} - {entry.end}
            </span>
            
            {/* –î–ª–∏—Ç–µ–ª—å–Ω–æ—Å—Ç—å */}
            <span className="text-sm font-medium">
              {getDuration()} —á
            </span>
            
            {/* –ò–Ω–¥–∏–∫–∞—Ç–æ—Ä —Ç–∞–π–º–µ—Ä–∞ */}
            {!entry.isManual && (
              <Clock className="w-4 h-4 text-green-500" title="–ó–∞–ø–∏—Å—å –∏–∑ —Ç–∞–π–º–µ—Ä–∞" />
            )}
          </div>
          
          {/* –û–ø–∏—Å–∞–Ω–∏–µ */}
          {entry.description && (
            <p className="text-sm text-gray-600 dark:text-gray-400 mb-2">
              {entry.description}
            </p>
          )}
          
          {/* –°—Ç–∞–≤–∫–∞ –∏ –∑–∞—Ä–∞–±–æ—Ç–æ–∫ */}
          <div className="flex items-center gap-4 text-sm">
            <span className="text-gray-500">
              –°—Ç–∞–≤–∫–∞: <span className="font-medium">{formatRateWithUnit(entry.rate || 0)}</span>
            </span>
            <span className="text-green-600 dark:text-green-400 font-semibold">
              –ó–∞—Ä–∞–±–æ—Ç–∞–Ω–æ: {formatEarned(entry.earned || 0)} ‚ÇΩ
            </span>
          </div>
        </div>
        
        {/* –î–µ–π—Å—Ç–≤–∏—è */}
        <div className="flex gap-2 ml-4">
          <button
            aria-label="–†–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞—Ç—å –∑–∞–ø–∏—Å—å"
            onClick={() => onEdit && onEdit(entry)}
            className="p-2 glass-button rounded-lg hover:bg-blue-500 hover:text-white transition-colors"
          >
            <Edit2 className="w-4 h-4" />
          </button>
          <button
            aria-label="–£–¥–∞–ª–∏—Ç—å –∑–∞–ø–∏—Å—å"
            onClick={handleDelete}
            className="p-2 glass-button rounded-lg hover:bg-red-500 hover:text-white transition-colors"
          >
            <Trash2 className="w-4 h-4" />
          </button>
        </div>
      </div>
      
      <ConfirmModal {...confirmConfig} />
    </div>
  );
});

EntryItem.propTypes = {
  entry: PropTypes.shape({
    id: PropTypes.string.isRequired,
    date: PropTypes.string,
    start: PropTypes.string,
    end: PropTypes.string,
    duration: PropTypes.oneOfType([PropTypes.string, PropTypes.number]),
    category: PropTypes.oneOfType([PropTypes.string, PropTypes.object]),
    categoryId: PropTypes.string,
    description: PropTypes.string,
    rate: PropTypes.number,
    earned: PropTypes.number,
    isManual: PropTypes.bool
  }).isRequired,
  onEdit: PropTypes.func.isRequired
};
